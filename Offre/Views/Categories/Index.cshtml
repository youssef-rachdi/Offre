@model IEnumerable<Offre.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>liste des catégories</h2>

<p>
    @Html.ActionLink("créer une nouvelle catégorie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatregoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatregoryDescription)
        </td>
        <td>
            @Html.ActionLink("La Modification", "Edit", new { id=item.Id }) |  
            @Html.ActionLink("Les détails", "Details", new { id=item.Id }) |
            @Html.ActionLink("La suppression", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
