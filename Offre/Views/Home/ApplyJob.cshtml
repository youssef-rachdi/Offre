@model Offre.Models.ApplyForJob1

@{
    ViewBag.Title = "ApplyJob";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("ApplyJob", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                @if (ViewBag != null)
                {
                    if (ViewBag.Result == "Vous avez postulé avec succès pour cette offre")
                    {
                        <div class="alert alert-success">@ViewBag.Result</div>
                    }
                    else
                    {
                        <div class="alert alert-danger">@ViewBag.Result</div>
                    }
                }
            </div>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.UploadFile, htmlAttributes: new { @class = "form-label" })
                <input type="file" name="UploadFile" class="form-control-file" />
                @Html.ValidationMessageFor(model => model.UploadFile, "", new { @class = "text-danger" })
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">Envoyer</button>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
