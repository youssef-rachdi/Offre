@model IEnumerable<Offre.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 style="margin-bottom:20px">La liste de l'offre</h2>

<p>
    @Html.ActionLink("Créer une offre d'emploi", "Create",null, new { style = "background-color:#2977ff; text-decoration:none; padding:4px;color:white;" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobContent)
            </td>
            <td>
                <img src="~/Uploads/@Html.DisplayFor(Model=>item.JobImage)" width="80px" height="80px" />
            </td>
            <td>
                @Html.ActionLink("La Modification", "Edit", new { id = item.Id }, new { style = "background-color:#004ccb; text-decoration:none; padding:4px;color:white;" })
                @Html.ActionLink("Les détails", "Details", new { id = item.Id }, new { style = "background-color:#75a5ff; text-decoration:none; padding:4px;color:white;" })
                @Html.ActionLink("La suppression", "Delete", new { id = item.Id }, new { style = "background-color:#f44336; text-decoration:none; padding:4px;color:white;" })
            </td>
        </tr>
    }

</table>
