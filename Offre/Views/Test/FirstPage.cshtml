
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome</title>

    <style>
        body {
            background-size: cover;
            background-image: url(../Image/pexels33.jpg);
        }

        button{
            width: 200px;
            height: 50px;
            background-color: #DDDDDD;
            border: none;
            color: rgb(102, 102, 102);
            position: absolute;
            top: 80%;
            left: 50%;
            transform: translate(-50%,-50%);
            cursor: pointer;
            font-size: 18px;
            transition: .5s;
            font-family:'Times New Roman', Times, serif;
        }

            button:hover {
                background-color: rgb(62, 134, 241);
                color: white;
                width: 300px;
                box-shadow: 10px 10px 50px 15px rgb(175, 174, 174);
            }

        .logo h1 {
            color: rgb(235, 235, 235);
            font-size: 70px;
            margin-top: -15px;
        }

        .container h1, h2, h3 {
            color: rgb(235, 235, 235);
            margin-left: 10%;
        }

        .container h1 {
            font-size: 60px;
        }

        .container h3 {
            margin-left: 20%;
            width: 200px;
        }

        .container h2 {
            margin-left: 12%;
            width: 200px;
        }
    </style>
</head>
<body>
    <div class="logo">
        <h1>Offre</h1>
    </div>

    <div class="container">
        <h1>Bienvenue dans l'espace de travail</h1>
        <h2>
            Votre chance d'entrer plus rapidement sur le marché du travail et dans la vie professionnelle
        </h2>
        <h3>La plateforme est ouverte aux particuliers et aux entreprises</h3>
    </div>

    <div class="content">
        <button>@Html.ActionLink("Get-Start","Index","Home",null,new { @style="text-decoration:none;"})</button>
    </div>
</body>
</html>
